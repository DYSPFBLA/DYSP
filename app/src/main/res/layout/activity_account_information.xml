<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.netassistant.DyspFBLAApp.AccountInformation"
    android:background="@color/purple_background">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorRestOFApp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1">

        <TextView
            android:text="About You!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_you"
            android:layout_weight="0.05"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_weight="0.74">

            <TextView
                android:text="Name:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/displayName"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:text="Email:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/displayEmail"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:text="Objects Posted:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/displayObjects"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                        <Button
                            android:text="Change Email"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:id="@+id/changeEmail"
                            android:layout_width="172dp" />

                <Button
                    android:text="Change Name"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:id="@+id/changeName"
                    android:layout_width="172dp" />
            </LinearLayout>

            <Button
                android:text="Delete Items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/deleteItems" />

            <Button
                android:text="View Offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/ViewOffers" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
            <Button
                android:text="Input Credit Card"
                android:layout_height="wrap_content"
                android:id="@+id/InputCreditCard"
                android:layout_width="172dp" />

                <Button
                    android:text="Input Paypal"
                    android:layout_height="match_parent"
                    android:id="@+id/InputPaypal"
                    android:layout_width="172dp" />
            </LinearLayout>

            <Button
                android:text="Connect to Facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ConnectToFacebook" />

            <Button
                android:text="Sign Out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SignOut" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            app:srcCompat="@drawable/larger_logo"
            android:id="@+id/dyspimage"
            android:layout_weight="0.19" />


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>